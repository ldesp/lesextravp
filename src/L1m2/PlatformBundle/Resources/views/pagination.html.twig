{# le programme incluant a défini les paramètres page, nbPages, pathlist #} 
<ul>
   {# On utilise la fonction range(a, b) qui crée un tableau de valeurs entre a et b #}
   {% for p in range(1, nbPages) %}
       {% if p == page %} 
           <li class="pgn_cur" ><a class="apgn" href="{{ path(pl, {'page': p}) }}">{{ p }}</a></li>
       {% else %} 
           <li class="pgn" ><a class="apgn" href="{{ path(pl , {'page': p}) }}">{{ p }}</a></li>
       {% endif %} 
    {% endfor %}
</ul>


